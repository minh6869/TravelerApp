                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="4dp"
                                    android:text="Van Mieu Ward"
                                    android:fontFamily="@font/sora"
                                    android:textColor="#FFFFFF"
                                    android:textSize="10sp" />
                            </LinearLayout>

                            <ImageView
                                android:layout_width="28dp"
                                android:layout_height="28dp"
                                android:layout_gravity="top|right"
                                android:layout_margin="8dp"
                                android:elevation="2dp"
                                android:src="@drawable/bookmark" />
                        </FrameLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="12dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Temple of Literature by Night"
                                android:fontFamily="@font/sora"
                                android:textColor="#000000"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="14dp"
                                    android:layout_height="14dp"
                                    android:src="@drawable/star"
                                    app:tint="#FFD700" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="4dp"
                                    android:text="9.4/10 (16315)"
                                    android:fontFamily="@font/sora"
                                    android:textColor="#4285F4"
                                    android:textSize="12sp" />
                            </LinearLayout>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="199.000 VND"
                                android:fontFamily="@font/sora"
                                android:textColor="#FF0000"
                                android:textSize="14sp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Activity Card 2 -->
                <androidx.cardview.widget.CardView
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="8dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="120dp">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop"
                                android:src="@drawable/halongbay" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="top|left"
                                android:layout_margin="8dp"
                                android:background="#F57777"
                                android:gravity="center_vertical"
                                android:orientation="horizontal"
                                android:paddingHorizontal="6dp"
                                android:paddingVertical="4dp"
                                android:elevation="2dp">

                                <ImageView
                                    android:layout_width="12dp"
                                    android:layout_height="12dp"
                                    android:src="@drawable/maps_and_flags__1_"
                                    app:tint="#FFFFFF" />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="4dp"
                                    android:text="Ha Long City"
                                    android:fontFamily="@font/sora"
                                    android:textColor="#FFFFFF"
                                    android:textSize="10sp" />
                            </LinearLayout>

                            <ImageView
                                android:layout_width="28dp"
                                android:layout_height="28dp"
                                android:layout_gravity="top|right"
                                android:layout_margin="8dp"
                                android:elevation="2dp"
                                android:src="@drawable/bookmark" />
                        </FrameLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="12dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Ha Long Bay with Cozy Bay Premium"
                                android:fontFamily="@font/sora"
                                android:textColor="#000000"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="14dp"
                                    android:layout_height="14dp"
                                    android:src="@drawable/star"
                                    app:tint="#FFD700" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="4dp"
                                    android:text="9.7/10 (89)"
                                    android:fontFamily="@font/sora"
                                    android:textColor="#4285F4"
                                    android:textSize="12sp" />
                            </LinearLayout>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="1.055.000 VND"
                                android:fontFamily="@font/sora"
                                android:textColor="#FF0000"
                                android:textSize="14sp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Activity Card 3 -->
                <androidx.cardview.widget.CardView
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="8dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="120dp">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop"
                                android:src="@drawable/_a258665_b982_4f6f_b857_dc886493b911_halong_bay_cruise_2_days_1_night_with_5_star_luxury" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="top|left"
                                android:layout_margin="8dp"
                                android:background="#F57777"
                                android:gravity="center_vertical"
                                android:orientation="horizontal"
                                android:paddingHorizontal="6dp"
                                android:paddingVertical="4dp"
                                android:elevation="2dp">

                                <ImageView
                                    android:layout_width="12dp"
                                    android:layout_height="12dp"
                                    android:src="@drawable/maps_and_flags__1_"
                                    app:tint="#FFFFFF" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="4dp"
                                    android:text="Ha Long City"
                                    android:fontFamily="@font/sora"
                                    android:textColor="#FFFFFF"
                                    android:textSize="10sp" />
                            </LinearLayout>

                            <ImageView
                                android:layout_width="28dp"
                                android:layout_height="28dp"
                                android:layout_gravity="top|right"
                                android:layout_margin="8dp"
                                android:elevation="2dp"
                                android:src="@drawable/bookmark" />
                        </FrameLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="12dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Ha Long Bay with Premium 5-star"
                                android:fontFamily="@font/sora"
                                android:textColor="#000000"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="14dp"
                                    android:layout_height="14dp"
                                    android:src="@drawable/star"
                                    app:tint="#FFD700" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="4dp"
                                    android:text="9.6/10 (1083)"
                                    android:fontFamily="@font/sora"
                                    android:textColor="#4285F4"
                                    android:textSize="12sp" />
                            </LinearLayout>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="1.799.000 VND"
                                android:fontFamily="@font/sora"
                                android:textColor="#FF0000"
                                android:textSize="14sp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </HorizontalScrollView>
    </LinearLayout>

    <!-- Travel in Asia Banner -->
    <LinearLayout
        android:id="@+id/travelAsiaBanner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/activitiesSection"
        android:layout_marginTop="24dp"
        android:background="#E8F1C5"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingVertical="12dp">

        <ImageView
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/pagoda" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="12dp"
            android:text="Travel In Asia"
            android:fontFamily="@font/sora"
            android:textColor="#E65100"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/lantern" />
    </LinearLayout>

    <!-- Travel In Asia Content Section -->
    <ScrollView
        android:id="@+id/travelAsiaContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/travelAsiaBanner"
        android:layout_marginBottom="104dp"
        android:background="#E8F1C5">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Decorative Elements -->
            <!-- Chinese cartoon character (left) -->
<!--            <ImageView-->
<!--                android:layout_width="60dp"-->
<!--                android:layout_height="80dp"-->
<!--                android:layout_gravity="left|top"-->
<!--                android:layout_marginTop="20dp"-->
<!--                android:src="@drawable/china_character" />-->

            <!-- Map of China decoration (right) -->
<!--            <ImageView-->
<!--                android:layout_width="80dp"-->
<!--                android:layout_height="100dp"-->
<!--                android:layout_gravity="right|top"-->
<!--                android:layout_marginTop="120dp"-->
